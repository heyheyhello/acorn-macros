{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    // TODO: Add more as they become ready
    "paths": {
      "acorn-macros": [
        "./src/acorn-macros"
      ],
      "acorn-macros/*": [
        "./src/macros/*"
      ],
      "style.macro": [
        "./src/macros/style.macro/index.d.ts"
      ],
      "style.macro/impl": [
        "./src/macros/style.macro/impl.ts"
      ],
    },
    "importsNotUsedAsValues": "error",
  },
  "exclude": [
    "node_modules"
  ]
}
