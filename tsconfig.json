{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    // TODO: Add more as they become ready
    "paths": {
      "*": [
        "packages/*"
      ],
    },
    "importsNotUsedAsValues": "error",
  },
  "exclude": [
    "node_modules"
  ]
}
